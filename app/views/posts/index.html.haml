.all
  .header
    .header--logo
      = link_to 'CIRCLE', root_path
    .header--menu
      %ul.header--menu__lists
        %li.header--menu__lists--list Top
        %li.header--menu__lists--list group
        %li.header--menu__lists--list category
        - if user_signed_in?
          = link_to user_path(current_user) do
            .header--menu__lists--list
              my-page
          = link_to destroy_user_session_path, class: "logout-btn", method: :delete do
            .header--menu__lists--list
              sign-out
        - else
          = link_to 'sign-in', user_session_path, class: 'li header--menu__lists--list'


  .section-index
    .section-index__title 
      .section-index__title--post Post
      .section-index__title--new
        = link_to 'New-post', new_post_path,class:'new-post-link'
    .section-index__wrap
      %ul.section-index__wrap__contents
        - @posts.each do |post|
          %li.section-index__wrap__contents__content
            .section-index__wrap__contents__content--image
              = image_tag "#{post.image}", class:'section-index__wrap__contents__content--image'
            .section-index__wrap__contents__content--script
              = link_to user_path(post.user.id) do
                .section-index__wrap__contents__content--script--user
                  投稿者 :
                  = post.user.nickname
                .section-index__wrap__contents__content--script--user
                  カテゴリ :
              .section-index__wrap__contents__content--script--title
                = link_to "#{post.title}", post_path(post)
              .section-index__wrap__contents__content--script--text
                = post.text

  .section-group
    .section-group__title
      .section-group__title--group Group
    .section-group__wrap
      .section-group__wrap__contents
        .section-group__wrap__contents--name
          エンジニア集まれ
        .section-group__wrap__contents--category
          開発
        %br
        .section-group__wrap__contents--member
          member: いしい たかはし おの ちゃん

  .footer
    .footer__copy
      %small.copyright
      Copyright &copy;
      = succeed "." do
        %span#copyright_year
        2019 "CIRCLE"
